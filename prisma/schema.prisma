generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model user {
  id             String    @id @default(uuid())
  name           String?   @default("")
  email          String    @unique
  username       String    @unique
  password       String?
  otp            String?
  otp_expiry     DateTime?
  email_verified Boolean   @default(false)
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  auth_method    String?
  github_id      Int?
}

model fly {
  id           String   @id @default(uuid())
  user_id      String
  storage      BigInt   @default(2000000000)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  used_storage BigInt   @default(0)
  name         String
  public_key   String
  project_url  String

  @@index([user_id])
}

model file {
  id               String   @id @default(uuid())
  name             String
  url              String
  parent_folder_id String
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  type             String
  uploaded_via     String
  size             BigInt
  path             String
  fly_id           String
  date             String

  @@index([fly_id])
}

model apikey {
  id         String            @id @default(uuid())
  created_at DateTime          @default(now())
  updated_at DateTime          @updatedAt
  active     Boolean           @default(true)
  user_id    String
  fly_id     String
  permission apikey_permission
  key        String            @unique
  name       String

  @@index([fly_id])
}

model log {
  id            String     @id @default(uuid())
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  method        log_method
  endpoint      String
  status        Int
  response_body Json
  request_body  Json
  date          String
  fly_id        String     @default("")
  ip_address    String     @default("0.0.0.0")

  @@index([fly_id])
}

model emailreset {
  id          String   @id
  user_id     String
  email       String
  created_at  DateTime @default(now())
  is_verified Boolean  @default(false)

  @@index([user_id], map: "emailReset_user_id_idx")
}

model refreshtoken {
  id         String   @id
  created_at DateTime @default(now())
  user_id    String   @unique(map: "refreshToken_user_id_key")
  token      String   @db.LongText
  expires_at DateTime
}

enum log_method {
  post
  get
  delete
}

enum apikey_permission {
  upload
  full
}
